<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/styles.css" />
  <title>Dashboard - Your Habits</title>
</head>

<body class="bg-white text-black">
  <%- include('../partials/_navbar') %>
    <% // Set default empty arrays if not provided var recentActivityData=typeof recentActivity !=='undefined' ?
      recentActivity : []; var achievementsData=typeof achievements !=='undefined' ? achievements : []; var
      upcomingGoalsData=typeof upcomingGoals !=='undefined' ? upcomingGoals : []; %>
      <div class="container mx-auto mt-10 px-4">
        <h1 class="text-3xl font-bold mb-6">Dashboard</h1>
        <div class="grid gap-6 grid-cols-1 lg:grid-cols-3">
          <!-- Main Section: Habits List (spanning 2 columns on large screens) -->
          <div class="lg:col-span-2 bg-white p-6 rounded shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Your Habits</h2>
            <% if (habits && habits.length) { %>
              <ul class="space-y-4">
                <% habits.forEach(function(habit) { %>
                  <li class="border p-4 flex items-center justify-between">
                    <div>
                      <span class="text-xl font-semibold text-black">
                        <%= habit.title %>
                      </span>
                      <p class="mt-2 text-sm text-grey-dark">
                        <%= habit.description %>
                      </p>
                      <p class="mt-1 text-sm text-grey-dark">
                        Frequency: <%= habit.frequency %>
                      </p>
                    </div>
                    <div class="flex items-center space-x-4">
                      <a href="/habits/<%= habit._id %>" class="text-sm font-medium text-primary hover:underline">
                        View
                      </a>
                      <a href="/habits/<%= habit._id %>/edit" class="text-sm font-medium text-primary hover:underline">
                        Edit
                      </a>
                      <form action="/habits/<%= habit._id %>?_method=DELETE" method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this habit?');">
                        <button type="submit" class="text-sm font-medium text-red-600 hover:underline">
                          Delete
                        </button>
                      </form>
                    </div>
                  </li>
                  <% }); %>
              </ul>
              <% } else { %>
                <p class="text-lg text-grey-dark">You haven't added any habits yet.</p>
                <% } %>
                  <a href="/habits/new" class="mt-6 inline-block bg-primary text-white px-4 py-2 rounded">
                    Add New Habit
                  </a>
          </div>

          <!-- Profile Summary -->
          <div class="bg-white p-6 rounded shadow-lg">
            <h2 class="text-xl font-bold mb-4">Profile Summary</h2>
            <% if (currentUser) { %>
              <p class="mb-2">Username: <span class="font-semibold">
                  <%= currentUser.username %>
                </span></p>
              <p class="mb-2">Total Habits: <span class="font-semibold">
                  <%= habits ? habits.length : 0 %>
                </span></p>
              <p class="mb-2">Email: <span class="font-semibold">
                  <%= currentUser.email || "N/A" %>
                </span></p>
              <% } else { %>
                <p>Please sign in to view your profile.</p>
                <% } %>
          </div>

          <!-- Recent Activity -->
          <div class="bg-white p-6 rounded shadow-lg">
            <h2 class="text-xl font-bold mb-4">Recent Activity</h2>
            <% if (recentActivity && recentActivity.length) { %>
              <ul class="list-disc ml-4">
                <% recentActivity.forEach(function(activity) { %>
                  <li class="text-grey-dark text-sm">
                    <%= activity.description %> <span class="text-xs text-gray-400">(<%= new
                          Date(activity.createdAt).toLocaleString() %>)</span>
                  </li>
                  <% }); %>
              </ul>
              <% } else { %>
                <p class="text-grey-dark text-sm">No activity recorded yet.</p>
                <% } %>
          </div>


          <!-- Achievements -->
          <div class="bg-white p-6 rounded shadow-lg">
            <h2 class="text-xl font-bold mb-4">Achievements</h2>
            <% if (achievementsData.length) { %>
              <ul class="list-disc ml-4">
                <% achievementsData.forEach(function(achievement) { %>
                  <li class="text-grey-dark text-sm">
                    <%= achievement %>
                  </li>
                  <% }); %>
              </ul>
              <% } else { %>
                <ul class="list-disc ml-4">
                  <li class="text-grey-dark text-sm">First Habit Added</li>
                  <li class="text-grey-dark text-sm">7-Day Streak</li>
                </ul>
                <% } %>
          </div>

          <!-- Upcoming Goals -->
          <div class="bg-white p-6 rounded shadow-lg">
            <h2 class="text-xl font-bold mb-4">Upcoming Goals</h2>
            <% if (upcomingGoalsData.length) { %>
              <ul class="list-disc ml-4">
                <% upcomingGoalsData.forEach(function(goal) { %>
                  <li class="text-grey-dark text-sm">
                    <%= goal %>
                  </li>
                  <% }); %>
              </ul>
              <% } else { %>
                <ul class="list-disc ml-4">
                  <li class="text-grey-dark text-sm">Run 3 miles this week</li>
                  <li class="text-grey-dark text-sm">Drink 8 glasses of water daily</li>
                </ul>
                <% } %>
          </div>
        </div>
      </div>
</body>

</html>